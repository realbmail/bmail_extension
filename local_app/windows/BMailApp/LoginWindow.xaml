<Window x:Class="BMailApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登录" Height="600" Width="400" 
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid x:Name="RootGrid">
        <!-- 主界面内容 -->
        <Grid x:Name="MainContent">
            <StackPanel Margin="20" VerticalAlignment="Top">
                <!-- Logo 图片（请确保将 Resources\logo.png 添加到工程中，并设置为 Resource）-->
                <Image Source="Resources/logo.png" Width="100" Height="100" HorizontalAlignment="Center" Margin="0,20,0,20"/>
                <!-- 显示钱包地址，如果为空则提示“请先登录浏览器插件” -->
                <TextBlock x:Name="BmailAddressTextBlock" Text="请先登录浏览器插件" FontSize="16" Margin="0,0,0,20"/>
                <!-- 密码输入 -->
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20" Height="30"/>
                <!-- 登录按钮 -->
                <Button Content="登录" Height="40" Click="LoginButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- 加载遮罩层 -->
        <Grid x:Name="LoadingOverlay" Background="#88000000" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="正在登录..." Foreground="White" FontSize="18"/>
                <!-- 如果需要可添加进度指示器 -->
            </StackPanel>
        </Grid>
    </Grid>
</Window>