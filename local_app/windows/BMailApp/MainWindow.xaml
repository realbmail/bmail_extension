<Window x:Class="BMailApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BMailApp"
        Title="BMailApp" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Icon="Resources/logo.ico"
        Loaded="Window_Loaded">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- 左侧导航栏 -->
        <local:SidebarView x:Name="Sidebar"
                           SelectedContent="{Binding SelectedContent, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=Window}}"
                           LogoutRequested="Sidebar_LogoutRequested"/>
        <!-- 右侧内容区域 -->
        <ContentControl x:Name="ContentArea" Grid.Column="1"/>
    </Grid>
</Window>
