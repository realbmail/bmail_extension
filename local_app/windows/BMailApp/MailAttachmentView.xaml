<UserControl x:Class="BMailApp.MailAttachmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BMailApp"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <!-- 注册转换器 -->
        <local:ContainsBmailToVisibilityConverter x:Key="ContainsBmailToVisibilityConverter" />
        <local:NotContainsBmailToVisibilityConverter x:Key="NotContainsBmailToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- 标题 -->
        <TextBlock Text="BMail附件" FontSize="24" Margin="0,0,0,10"/>
        <!-- 文件列表区域 -->
        <Border Grid.Row="1" BorderThickness="1" BorderBrush="Gray" Padding="5">
            <Grid>
                <!-- 使用 ListBox 展示文件列表 -->
                <ListBox x:Name="FilesListBox" SelectionChanged="FilesListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <!-- DataContext 为文件名字符串 -->
                            <TextBlock Text="{Binding}">
                                <TextBlock.ContextMenu>
                                    <ContextMenu>
                                        <!-- 如果文件名包含 _bmail，则显示解密，否则显示打开 -->
                                        <MenuItem Header="解密" Click="DecryptMenuItem_Click"
                                                  Visibility="{Binding Converter={StaticResource ContainsBmailToVisibilityConverter}}"/>
                                        <MenuItem Header="打开" Click="OpenMenuItem_Click"
                                                  Visibility="{Binding Converter={StaticResource NotContainsBmailToVisibilityConverter}}"/>
                                        <!-- 删除按钮始终显示 -->
                                        <MenuItem Header="删除" Click="DeleteMenuItem_Click"/>
                                    </ContextMenu>
                                </TextBlock.ContextMenu>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <!-- 当没有文件时显示提示 -->
                <TextBlock x:Name="NoFilesTextBlock"
                           Text="目录中没有文件"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Grid>
    <!-- UserControl 的右键菜单，支持刷新操作 -->
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="刷新" Click="RefreshMenuItem_Click"/>
        </ContextMenu>
    </UserControl.ContextMenu>
</UserControl>
